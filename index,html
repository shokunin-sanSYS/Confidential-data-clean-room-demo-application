    </div>

    <script>
        // Navigation
        document.querySelectorAll('.nav-item').forEach(item => {
            item.addEventListener('click', function() {
                document.querySelectorAll('.nav-item').forEach(i => i.classList.remove('active'));
                document.querySelectorAll('.page').forEach(p => p.classList.remove('active'));
                
                this.classList.add('active');
                const pageId = this.getAttribute('data-page');
                document.getElementById(pageId).classList.add('active');
            });
        });

        // Animated Metrics
        function animateValue(id, start, end, duration, suffix = '') {
            const obj = document.getElementById(id);
            const range = end - start;
            const increment = range / (duration / 16);
            let current = start;
            
            const timer = setInterval(() => {
                current += increment;
                if ((increment > 0 && current >= end) || (increment < 0 && current <= end)) {
                    current = end;
                    clearInterval(timer);
                }
                obj.textContent = Math.floor(current) + suffix;
            }, 16);
        }

        // Initialize metrics animation after banner
        setTimeout(() => {
            animateValue('jobCount', 0, 247, 2000);
            animateValue('dataSourceCount', 0, 8, 1800);
            animateValue('anonRate', 0, 99.7, 2200);
            animateValue('auditScore', 0, 100, 2500);
        }, 3300);

        // Update timestamps
        function updateTimestamps() {
            const now = new Date();
            const times = [
                { id: 'time1', offset: 2 },
                { id: 'time2', offset: 8 },
                { id: 'time3', offset: 15 },
                { id: 'time4', offset: 32 }
            ];
            
            times.forEach(time => {
                const timestamp = new Date(now - time.offset * 60000);
                document.getElementById(time.id).textContent = time.offset + '分前';
            });
        }
        
        setTimeout(updateTimestamps, 3300);

        // Charts
        let processingChart, industryChart, correlationChart, segmentChart;

        function initCharts() {
            // Processing Chart
            const ctxProcessing = document.getElementById('processingChart').getContext('2d');
            processingChart = new Chart(ctxProcessing, {
                type: 'line',
                data: {
                    labels: ['10/1', '10/8', '10/15', '10/22', '10/29', '11/5', '11/7'],
                    datasets: [{
                        label: 'データ処理量 (GB)',
                        data: [145, 182, 256, 234, 289, 312, 347],
                        borderColor: '#667eea',
                        backgroundColor: 'rgba(102, 126, 234, 0.1)',
                        borderWidth: 2,
                        tension: 0.4,
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: { color: 'rgba(102, 126, 234, 0.1)' },
                            ticks: { color: '#a8b2d1' }
                        },
                        x: {
                            grid: { color: 'rgba(102, 126, 234, 0.1)' },
                            ticks: { color: '#a8b2d1' }
                        }
                    },
                    animation: {
                        duration: 2000,
                        easing: 'easeInOutQuart'
                    }
                }
            });

            // Industry Chart
            const ctxIndustry = document.getElementById('industryChart').getContext('2d');
            industryChart = new Chart(ctxIndustry, {
                type: 'doughnut',
                data: {
                    labels: ['金融', '医療', 'メーカー', '小売', 'その他'],
                    datasets: [{
                        data: [35, 28, 22, 10, 5],
                        backgroundColor: [
                            '#667eea',
                            '#764ba2',
                            '#f093fb',
                            '#4facfe',
                            '#43e97b'
                        ],
                        borderWidth: 0
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'right',
                            labels: { color: '#a8b2d1', padding: 15 }
                        }
                    },
                    animation: {
                        duration: 2000,
                        easing: 'easeInOutQuart'
                    }
                }
            });
        }

        setTimeout(initCharts, 3300);

        // Real-time data update
        setInterval(() => {
            if (processingChart) {
                const lastValue = processingChart.data.datasets[0].data[processingChart.data.datasets[0].data.length - 1];
                const newValue = lastValue + Math.floor(Math.random() * 20) - 5;
                
                processingChart.data.datasets[0].data.push(newValue);
                processingChart.data.labels.push('');
                
                if (processingChart.data.datasets[0].data.length > 10) {
                    processingChart.data.datasets[0].data.shift();
                    processingChart.data.labels.shift();
                }
                
                processingChart.update('none');
            }
        }, 3000);

        // Analysis Page
        function startAnalysis() {
            const processing = document.getElementById('processingIndicator');
            const results = document.getElementById('analysisResults');
            
            processing.classList.add('active');
            results.style.display = 'none';
            
            setTimeout(() => {
                processing.classList.remove('active');
                results.style.display = 'grid';
                initAnalysisCharts();
            }, 3000);
        }

        function initAnalysisCharts() {
            // Correlation Chart
            const ctxCorr = document.getElementById('correlationChart').getContext('2d');
            correlationChart = new Chart(ctxCorr, {
                type: 'scatter',
                data: {
                    datasets: [{
                        label: '相関スコア',
                        data: Array.from({length: 50}, () => ({
                            x: Math.random() * 100,
                            y: Math.random() * 100
                        })),
                        backgroundColor: 'rgba(102, 126, 234, 0.6)',
                        borderColor: '#667eea'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            grid: { color: 'rgba(102, 126, 234, 0.1)' },
                            ticks: { color: '#a8b2d1' }
                        },
                        x: {
                            grid: { color: 'rgba(102, 126, 234, 0.1)' },
                            ticks: { color: '#a8b2d1' }
                        }
                    }
                }
            });

            // Segment Chart
            const ctxSeg = document.getElementById('segmentChart').getContext('2d');
            segmentChart = new Chart(ctxSeg, {
                type: 'bar',
                data: {
                    labels: ['セグA', 'セグB', 'セグC', 'セグD', 'セグE'],
                    datasets: [{
                        label: '件数',
                        data: [12500, 19800, 8900, 15600, 11200],
                        backgroundColor: 'rgba(102, 126, 234, 0.7)',
                        borderColor: '#667eea',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: { color: 'rgba(102, 126, 234, 0.1)' },
                            ticks: { color: '#a8b2d1' }
                        },
                        x: {
                            grid: { color: 'rgba(102, 126, 234, 0.1)' },
                            ticks: { color: '#a8b2d1' }
                        }
                    },
                    plugins: {
                        legend: { display: false }
                    }
                }
            });
        }

        // Generate Report
        function generateReport() {
            const now = new Date();
            document.getElementById('reportDate').textContent = now.toLocaleString('ja-JP');
            
            // Animate report numbers
            animateValue('reportJobs', 200, 247, 1500);
            animateValue('reportAnon', 1500000, 1847293, 2000);
            animateValue('reportDP', 120, 156, 1800);
            animateValue('reportLogs', 3000, 3482, 2200);
            
            alert('最新の監査レポートを生成しました');
        }
    </script>
